extends: standard
rules:
  max-len:
    - warn
    - code: 80
      tabWidth: 2
  arrow-parens:
    - error
    - always
  no-extra-parens:
    - error
    - all
    - returnAssign: false
  eol-last:
    - error
    - always
  linebreak-style:
    - error
    - unix
  array-bracket-newline:
    - error
    - consistent
  function-paren-newline:
    - error
    - consistent
